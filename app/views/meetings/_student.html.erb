<li data-role='student-<%= student.id %>'>
  <div class='name'><%= student.name %></div>
  <section class='marks'>
    <div class='add-merit'>
      <%= link_to '+',
                  meeting_marks_path(meeting,
                                     mark: { type: :merit },
                                     student_id: student.id
                                    ),
                  remote: true,
                  method: :post
      %>
    </div>
    <p class='merits-count'>0</p>
  </section>
  <section class='marks'>
    <div class='add-demerit'>
      <%= link_to '-',
                  meeting_marks_path(meeting,
                                     mark: { type: :demerit },
                                     student_id: student.id
                                    ),
                  remote: true,
                  method: :post
      %>
    </div>
    <p class='demerits-count'>0</p>
  </section>
</li>
